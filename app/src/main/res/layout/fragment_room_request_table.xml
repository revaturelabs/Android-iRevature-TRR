<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".roomrequesttable.RoomRequestTableFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_room_table_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/start_date" />

            <EditText
                android:id="@+id/et_room_table_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="mm/dd/yyyy"
                android:inputType="date"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btn_room_table_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/calendar_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_room_table_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/end_date" />

            <EditText
                android:id="@+id/et_room_table_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="mm/dd/yyyy"
                android:inputType="date"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btn_room_table_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/calendar_small" />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_room_requests_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/orange_outline_border" />

</LinearLayout>