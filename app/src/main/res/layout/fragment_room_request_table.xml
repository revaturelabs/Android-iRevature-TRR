<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".roomrequesttable.RoomRequestTableFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingStart="@dimen/card_request_date_margin"
        android:paddingEnd="@dimen/card_request_date_margin"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/container_room_table_start_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|start"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageButton
                android:id="@+id/btn_room_table_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/key_margin"
                android:background="@drawable/calendar_small_white"
                android:contentDescription="@string/date_icon_description" />

            <TextView
                android:id="@+id/tv_room_table_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/key_margin"
                android:hint="@string/start_date_hint"
                android:paddingEnd="@dimen/key_padding"
                android:textColor="@android:color/white"
                android:textColorHint="@color/light_gray"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_room_table_end_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|start"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageButton
                android:id="@+id/btn_room_table_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/key_margin"
                android:background="@drawable/calendar_small_white"
                android:contentDescription="@string/date_icon_description" />

            <TextView
                android:id="@+id/tv_room_table_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/key_margin"
                android:hint="@string/end_date_hint"
                android:paddingEnd="@dimen/key_padding"
                android:textColor="@android:color/white"
                android:textColorHint="@color/light_gray"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rooms_info_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:divider="@color/dark_gray"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/card_request_date_margin"
        android:paddingTop="@dimen/key_margin"
        android:paddingRight="@dimen/card_request_date_margin"
        android:paddingBottom="@dimen/card_padding">

        <TextView
            android:id="@+id/tv_request_accepted_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/key_margin"
            android:background="@color/room_available"
            android:paddingLeft="@dimen/key_padding"
            android:paddingRight="@dimen/key_padding"
            android:text="@string/unoccupied_key" />

        <TextView
            android:id="@+id/tv_request_rejected_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/key_margin"
            android:background="@color/room_unavailable"
            android:paddingLeft="@dimen/key_padding"
            android:paddingRight="@dimen/key_padding"
            android:text="@string/occupied_key" />

        <TextView
            android:id="@+id/tv_room_results"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/key_margin"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_room_table_helper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:text="@string/room_table_helper"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_room_requests_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>