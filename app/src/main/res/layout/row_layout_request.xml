<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_request_room1_batch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:text="@string/batch_ex"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_request_room1_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="@string/room_number"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_request_room1_trainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="@string/trainer"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_request_room1_dates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:text="@string/start_end"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_pending_arrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/down_arrow"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_request_room2_batch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:text="@string/batch_ex"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_request_room2_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="@string/room_number"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_request_room2_trainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="@string/trainer"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_request_room2_dates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:text="@string/start_end"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>