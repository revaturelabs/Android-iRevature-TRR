<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_room_row_batch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="3"
        android:textSize="16sp"
        android:text="@string/batch_ex" />

    <TextView
        android:id="@+id/tv_room_row_room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:text="@string/room_number" />

    <TextView
        android:id="@+id/tv_room_row_trainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:text="@string/trainer" />

    <TextView
        android:id="@+id/tv_room_row_dates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="2"
        android:textSize="16sp"
        android:text="@string/start_end" />

</LinearLayout>